<Window x:Class="DragAndDrop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragAndDrop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TreeView x:Name="XAML_TreeView" AllowDrop="True" DragOver="XAML_TreeView_DragOver" PreviewMouseLeftButtonDown="XAML_TreeView_PreviewMouseLeftButtonDown"  PreviewMouseLeftButtonUp="XAML_TreeView_PreviewMouseLeftButtonUp" PreviewMouseMove="XAML_TreeView_PreviewMouseMove" FontSize="50">
            <TreeViewItem Header="01번째 아이템"/>
            <TreeViewItem Header="02번째 아이템"/>
            <TreeViewItem Header="03번째 아이템"/>
            <TreeViewItem Header="04번째 아이템"/>
            <TreeViewItem Header="05번째 아이템"/>
        </TreeView>
        
    </Grid>
</Window>
